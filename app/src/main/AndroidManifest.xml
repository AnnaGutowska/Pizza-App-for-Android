<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.example.pizzaapp">

    <application
            android:allowBackup="true"
            android:fullBackupContent="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/Theme.PizzaApp">
        <activity android:name=".backend.StoreOrdersActivity"
                  android:label="Store Orders"
                  android:parentActivityName=".backend.MainActivity">
        </activity>
        <activity android:name=".backend.CurrentOrderActivity"
                  android:label="Current Order"
                  android:parentActivityName=".backend.MainActivity">
        </activity>
        <activity android:name=".backend.PizzaCustomizationActivity"
                  android:label="Customize Pizza"
                  android:parentActivityName=".backend.MainActivity">
        </activity>
        <activity android:name=".backend.MainActivity"
                  android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
    </application>

</manifest>