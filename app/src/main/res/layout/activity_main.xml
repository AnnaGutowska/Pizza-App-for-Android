            android:text="@string/pepperoni"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textViewPepperoni"
            android:textStyle="italic"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" android:fontFamily="monospace"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="28dp"
            android:layout_marginStart="28dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="556dp"/>
    <ImageButton
            android:layout_width="96dp"
            android:layout_height="86dp" app:srcCompat="@drawable/storeorders" android:id="@+id/imageButtonStoreOrders"
            android:scaleType="fitCenter" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="352dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="276dp"
            android:layout_marginStart="276dp" android:contentDescription="@string/store_orders"
            android:onClick="onClickStoreOrders"/>
    <ImageButton
            android:layout_width="92dp"
            android:layout_height="85dp" app:srcCompat="@drawable/currentorder"
            android:id="@+id/imageButtonCurrentOrder"
            android:scaleType="centerInside" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="268dp" android:layout_marginEnd="31dp" android:layout_marginRight="31dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="272dp" android:layout_marginStart="272dp"
            android:contentDescription="@string/current_order" app:layout_constraintHorizontal_bias="0.25"
            android:onClick="onClickCurrentOrder"/>
    <TextView
            android:text="@string/store_orders"
            android:layout_width="97dp"
            android:layout_height="23dp" android:id="@+id/textViewStoreOrder"
            android:textSize="16sp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="436dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="276dp" android:layout_marginStart="276dp"/>
    <TextView
            android:text="@string/current_order"
            android:layout_width="102dp"
            android:layout_height="22dp" android:id="@+id/textViewCurrentOrder"
            android:textSize="16sp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="252dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="272dp" android:layout_marginStart="272dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>