<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".backend.MainActivity" android:background="#E3A073">
    <TextView
            android:text="@string/welcome_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.049" android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:fontFamily="serif" android:textSize="28sp" android:textStyle="bold"
            android:textAllCaps="true" android:textColor="#7E241D" android:id="@+id/textViewWelcome"
            app:layout_constraintHorizontal_bias="0.428"/>
    <ImageButton
            android:layout_width="141dp"
            android:layout_height="132dp" app:srcCompat="@drawable/deluxepic" android:id="@+id/imageButtonDeluxe"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.141" android:contentDescription="@string/deluxe"
            android:adjustViewBounds="false" android:scaleType="centerInside"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="48dp"
            android:layout_marginStart="48dp"/>
