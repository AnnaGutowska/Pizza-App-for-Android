<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent" android:longClickable="true">

    <TextView
            android:layout_width="138dp"
            android:layout_height="27dp" android:id="@+id/textCurrentPhone"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="39dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="19dp" android:layout_marginStart="19dp" android:textSize="16sp"
            android:textColor="#050505"/>
    <TextView
            android:text="@string/current_phone"
            android:layout_width="225dp"
            android:layout_height="25dp" android:id="@+id/textViewTitleCurrent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="14dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="19dp" android:layout_marginStart="19dp" android:textColor="#070000"
            android:textStyle="bold"/>
    <ListView
            android:layout_width="373dp"
            android:layout_height="233dp"
            android:id="@+id/listViewCurrent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="76dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="19dp" android:layout_marginStart="19dp" android:longClickable="true"
            android:clickable="true" android:focusable="true"/>
    <TextView
            android:text="@string/subtotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textViewSubtotal"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="340dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="20dp" android:layout_marginStart="20dp"/>
    <TextView
            android:text="@string/sales_tax"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textViewSalesTax"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="363dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp"/>
    <TextView
            android:text="@string/order_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView4"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="352dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="204dp" android:layout_marginStart="204dp" android:textColor="#4CAF50"
            android:textStyle="bold" android:textAllCaps="false" android:textSize="16sp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textViewSubtotalCurrent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="340dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="93dp" android:layout_marginStart="93dp" android:textColor="#050505"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textViewTax"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="361dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="91dp" android:layout_marginStart="91dp" android:textColor="#0C0C0C"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textViewOrderTotal"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="353dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="304dp" android:layout_marginStart="304dp"/>
    <Button
            android:text="@string/remove_pizza"
            android:layout_width="159dp"
            android:layout_height="49dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="388dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp" android:id="@+id/buttonRemovePizza"/>
    <Button
            android:text="@string/place_order"
            android:layout_width="161dp"
            android:layout_height="47dp" android:id="@+id/buttonPlaceOrder"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="388dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="204dp" android:layout_marginStart="204dp" android:onClick="onPlaceOrderClick"/>
</androidx.constraintlayout.widget.ConstraintLayout>